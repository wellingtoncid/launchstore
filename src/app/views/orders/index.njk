{% extends 'layout.njk' %}
{% import "parts/card.njk" as card %}

{% block content %}

  {% if (orders.length < 1) %}
  
    {% call card.render('', 'cart-empty container') %}
      <p>Nenhum pedido at√© o momento</p>
      <a href="/products/search" class="button">Voltar a loja</a>
    {% endcall %}
  
  {% else %}

    {% call card.render('Meus pedidos', 'orders container') %}
  
      <div class="items">
        {% for order in orders %}
          <div class="item-container">
            <div class="item">
              <img src="{{order.product.img}}" alt="Imagem de {{order.product.name}}">
              <div>
                <div class="title">{{order.product.name}}</div>
                <div class="price">{{order.formattedPrice}}</div>
                <div class="updated-at">{{order.formattedUpdatedAt}}</div>
              </div>
            </div>
            <div class="quantity">
              Qtde. {{order.quantity}}
            </div>
            <div class="total">
              {{order.formattedTotal}}
            </div>
            <div class="status {{order.status}}">
              {{order.formattedStatus}}
            </div>
          </div>
          
        {% endfor %}
      </div>

    {% endcall %}

  {% endif %}

{% endblock content %}