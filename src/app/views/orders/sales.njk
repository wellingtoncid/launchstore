{% extends 'layout.njk' %}
{% import "parts/card.njk" as card %}

{% block content %}

  {% if (orders.length < 1) %}
  
    {% call card.render('', 'cart-empty container') %}
      <p>Nenhuma venda até o momento</p>
      <a href="/ads/create" class="button">Criar novo anúncio!</a>
    {% endcall %}
  
  {% else %}

    {% call card.render('Minhas Vendas', 'sales orders container') %}
  
      <div class="items">
        {% for sale in sales %}
          <div class="item-container">
            <div class="item">
              <img src="{{sale.product.img}}" alt="Imagem de {{sale.product.name}}">
              <div>
                <div class="title">{{sale.product.name}}</div>
                <div class="price">{{sale.formattedPrice}}</div>
                <div class="updated-at">{{sale.formattedUpdatedAt}}</div>
              </div>
            </div>
            <div class="quantity">
              Qtde. {{sale.quantity}}
            </div>
            <div class="total">
              {{sale.formattedTotal}}
            </div>
            <div class="status {{sale.status}}">
              {{sale.formattedStatus}}
            </div>

            <div class="actions dropdown-container">
              Ações <i class="material-icons">arrow_drop_down</i>
              <ul class="dropdown">
                <li><a href="/orders/{{sale.id}}">Ver Pedido</a></li>
                <li><a href="/products/{{sale.product.id}}">Editar Produto</a></li>
                {% if sale.status == 'open' %}
                <li>
                  <form action="/orders/{{sale.id}}/close" method="post">
                    <button>Concluir Venda</button>
                  </form>
                </li>
                <li>
                  <form action="/orders/{{sale.id}}/cancel" method="post">
                    <button>Cancelar Pedido</button>
                  </form>
                </li>
                {% endif %}
              </ul>
            </div>
          </div>
        {% endfor %}
      </div>

    {% endcall %}

  {% endif %}

{% endblock content %}