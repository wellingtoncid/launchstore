{% extends 'layout.njk' %}
{% import 'parts/card.njk' as cards %}

{% block content %}

{% call cards.render('', 'order-error container') %}
  <div class="error-lottie"></div>
    <h2>Desculpe</h2>
    <p>
      Não foi possível processar seu pedido.
    </p>
    <a href="#" onClick="history.back()">Tentar novamente</a>
  
{% endcall %}

<script src="/lottie.min.js"></script>
<script>
  const element = document.querySelector('.error-lottie')
  lottie.loadAnimation({
    container: element, // the dom element that will contain the animation
    renderer: 'svg',
    loop: false,
    autoplay: true,
    path: '/9607-failed.json' // the path to the animation json
  }).setSpeed(1.5)
</script>

{% endblock content %}