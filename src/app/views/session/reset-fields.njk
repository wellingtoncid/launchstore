<div class="item">
    <div>E-mail</div>
    <div class="input">
        <input 
        type="email" 
        name="email" 
        placeholder="Digite o seu e-mail"
        value="{{ user.email }}"
        onblur="Validate.apply(this, 'isEmail')">
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="password"
            placeholder="Digite uma nova senha"
        >
    </div>
</div>

<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="passwordRepeat"
            placeholder="Repita a nova sua senha"
        >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">
